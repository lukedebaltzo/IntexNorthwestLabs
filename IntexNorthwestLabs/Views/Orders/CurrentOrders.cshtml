@model IEnumerable<IntexNorthwestLabs.Models.Order>

@{
    ViewBag.Title = "Current Orders";
}

<h2>Current Orders</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            Assays Ordered
        </th>
        <th>
            Rushed Order?
        </th>
        <th>
            Due Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderRushed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                <!-- @Html.ActionLink("Order Details", "Index", "Test_Results", new { iCode = Html.DisplayFor(modelItem => item.CustomerCode) })-->
                <a href="@Url.Action("Index", "Test_Results", new { iCode = Html.DisplayFor(modelItem => item.CustomerCode) })">Order Details</a>
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary btn-default" })
